@model IEnumerable<Simu.App.ViewModels.QuestaoViewModel>

@{
    ViewData["Title"] = "Questoes";
}

<h1>Provas</h1>

<br />
<br />
<br />

@foreach (var item in Model)
{
<div class="container p-3 my-3 border">
    <div class="card-header">
        Questão  @Html.DisplayFor(modelItem => item.Id)
    </div>
    <div class="container p-3 my-3 border">
        <blockquote class="blockquote mb-0">
            @Html.DisplayFor(modelItem => item.Enunciado)
        </blockquote>
    </div>
    <br />

    <div>

        <ul class="list-group list-group-flush">
            <li class="list-group-item">                
                <input class="form-check-input" type="radio" name="radioA" value="@item.A" id="radio_a">
                <label class="form-check-label" for="radioA">
                    @Html.DisplayFor(modelItem => item.A)
                </label>
            </li>
            <li class="list-group-item">
                <input class="form-check-input" type="radio" name="radioB" value="@item.B" id="radio_b">
                <label class="form-check-label" for="radioB">
                    @Html.DisplayFor(modelItem => item.B)
                </label>
            </li>
            <li class="list-group-item">
                <input class="form-check-input" type="radio" name="radioC" value="@item.C" id="radio_c">
                <label class="form-check-label" for="radioC">
                    @Html.DisplayFor(modelItem => item.C)
                </label>
            </li>
            <li class="list-group-item">
                <input class="form-check-input" type="radio" name="radioD"value="@item.D" id="radio_d">
                <label class="form-check-label" for="radioD">
                    @Html.DisplayFor(modelItem => item.D)
                </label>
            </li>
        </ul>
    </div>
</div>


}

<br />
<br />

<div>

    <a asp-action="Index">Escolher outra prova</a>
</div>
